# yamllint disable
apiVersion: v1
kind: Secret
metadata:
  name: openldap
  namespace: security
type: Opaque
stringData:
  adminusername: ${LDAP_ADMIN_USERNAME}
  adminpassword: ${LDAP_ADMIN_PASSWORD}
  users: ${LDAP_USERS}
  group: ${LDAP_GROUP}
  passwords: ${LDAP_PASSWORDS}
  ldaproot: ${LDAP_ROOT}
  binddn: "cn=${LDAP_ADMIN_USERNAME},${LDAP_ROOT}"
  domain: ${BOOTSTRAP_DOMAIN}
