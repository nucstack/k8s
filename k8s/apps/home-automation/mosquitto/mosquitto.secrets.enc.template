# yamllint disable
---
apiVersion: v1
kind: Secret
metadata:
  name: mosquitto-config
  namespace: home-automation
stringData:
  mosquitto_pwd: ${MQTT_USERNAME}:${MQTT_PASSWORD}
  mqtt.conf: |
    log_dest stdout
    log_type error
    log_type warning
    log_type notice
    connection_messages true
    log_timestamp true
    password_file /data/mosquitto_pwd
